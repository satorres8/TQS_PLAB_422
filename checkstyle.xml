<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <!-- Configuración principal -->
    <module name="TreeWalker">
        <!-- Permitir espacios en torno a operadores y palabras clave -->
        <module name="WhitespaceAround"/>

        <!-- Verificar que las estructuras de control tienen llaves -->
        <module name="NeedBraces"/>
    </module>

    <!-- Regla básica para permitir archivos largos -->
    <module name="FileLength">
        <property name="max" value="5000"/> <!-- Aumentar límite si es necesario -->
    </module>

    <!-- Permitir líneas largas -->
    <module name="LineLength">
        <property name="max" value="200"/> <!-- Permitir líneas más largas -->
    </module>
</module>
